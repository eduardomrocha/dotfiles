{
  "$schema": "https://opencode.ai/config.json",
  "model": "ollama/qwen2.5-coder:32b",
  "small_model": "ollama/qwen2.5-coder:7b",
  "theme": "tokyonight",
  "autoupdate": true,
  "provider": {
    "ollama": {
      "options": {
        "baseURL": "http://localhost:11434"
      },
      "models": {
        "qwen2.5-coder:32b": {
          "name": "Qwen 32B - Standard Coding"
        },
        "qwen2.5-coder:7b": {
          "name": "Qwen 7B - Quick Tasks"
        }
      }
    },
    "anthropic": {
      "models": {},
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    }
  },
  "agent": {
    "quick": {
      "description": "Quick tasks - comments, formatting, simple snippets",
      "model": "ollama/qwen2.5-coder:7b"
    },
    "code": {
      "description": "Standard coding - features, CRUD, APIs",
      "model": "ollama/qwen2.5-coder:32b"
    },
    "expert": {
      "description": "Architecture, security, complex debugging, code review",
      "model": "anthropic/claude-sonnet-4-5-20250929"
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask"
  }
}
